<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:weightSum="2"
    tools:context="com.simiomobile.demotransfer.ResultActivity">

    <LinearLayout
        android:id="@+id/r_ln_slip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:weightSum="5"
        android:background="@color/colorWhite"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Fail"
            android:textSize="56sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:id="@+id/r_tv_status" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:layout_weight="1"
                android:text="From A/C"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:layout_weight="1"
                android:text="To A/C"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="top|center_horizontal"
                android:layout_weight="1"
                android:text="xxx-2-54545-x"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/r_tv_from_ac" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="top|center_horizontal"
                android:layout_weight="1"
                android:text="xxx-2-54545-x"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/r_tv_to_ac" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:layout_weight="1"
                android:text="Amount"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:layout_weight="1"
                android:text="Fee"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="top|center_horizontal"
                android:layout_weight="1"
                android:text="999 bath"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/r_tv_amount" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="top|center_horizontal"
                android:layout_weight="1"
                android:text="25 bath"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/r_tv_fee" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Share"
            android:onClick="onClickShare" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Save"
            android:onClick="onClickSave" />
    </LinearLayout>
</LinearLayout>
